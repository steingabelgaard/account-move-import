<odoo>

    <record model="ir.ui.view" id="account_move_import_map_form_view">
        <field name="name">account.move.import.map.form (in account_move_csv_import)</field>
        <field name="model">account.move.import.map</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <!-- TODO -->
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_move_import_map_search_view">
        <field name="name">account.move.import.map.search (in account_move_csv_import)</field>
        <field name="model">account.move.import.map</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="account_move_import_map_tree_view">
        <field name="name">account.move.import.map.tree (in account_move_csv_import)</field>
        <field name="model">account.move.import.map</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_move_import_map_act_window">
        <field name="name">Account Move Import Map</field> <!-- TODO -->
        <field name="res_model">account.move.import.map</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="account_move_import_map_menu">
        <field name="name">Account Move Import Map</field>
        <field name="parent_id" ref="account_move_import_conf_menu"/>
        <field name="action" ref="account_move_import_map_act_window"/>
        <field name="sequence" eval="40"/> <!-- TODO -->
    </record>

</odoo>
